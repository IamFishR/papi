# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
# Set USE_NEON=true to use Neon PostgreSQL, false for local database
USE_NEON=false

# Neon PostgreSQL Configuration (when USE_NEON=true)
NEON_STRING=your_neon_connection_string_here

# Local Database Configuration (when USE_NEON=false)
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_NAME=papi_db
LOCAL_DB_USER=root
LOCAL_DB_PASSWORD=
LOCAL_DB_DIALECT=mysql

# Legacy Database Configuration (kept for backward compatibility)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=papi_db
DB_USER=root
DB_PASSWORD=
DB_DIALECT=mysql

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX=100
